{{> menu }}
<main class="conteiner-main" id="home">
  <h1>Nuestros productos </h1>
  <section class="conteiner-tarjetas">
    {{#if prod.length}}
      {{#each prod}}
        <!-- Access each product's properties here -->
        <div class="card" style="width: 18rem;">
          <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Price: ${{this.price}}</p>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="conteiner-info">
        <h4>Lo sentimos pero no tenemos productos disponibles</h4>
      </div>
      
    {{/if}}
  </section>
</main>



