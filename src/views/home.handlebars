{{> menu }}
<main class="conteiner-main" id="home">
  <h1>Nuestros productos</h1>
  <section class="conteiner-tarjetas">
    {{#if prod}}
      {{#each prod}}
        <div class="card" style="width: 18rem;">
          <img 
            src="{{#if this.thumbnail}}{{this.thumbnail}}{{else}}/img/default-product.jpg{{/if}}" 
            class="card-img-top" 
            alt="{{this.title}}"
          >
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Precio: ${{this.price}}</p>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="conteiner-info">
        <h4>Lo sentimos, pero no tenemos productos disponibles</h4>
      </div>
    {{/if}}
  </section>
</main>




