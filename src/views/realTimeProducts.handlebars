{{> menu }}
<main class="conteiner-main" id="home">
  <h1>Nuestros productos con websocket.io</h1>
  <div class="conteiner-tarjetas" id="content">
  
  </div>
  <div class="container" style="color: #DBF227;">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Formulario para Agregar Producto</h2>
            <form id="productForm" action="" method="POST">
                <div class="mb-3" require >
                    <label for="title" class="form-label">Título del Producto</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>
                <div class="mb-3" require>
                    <label for="description" class="form-label">Descripción</label>
                    <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
                </div>
                <div class="mb-3" require >
                    <label for="code" class="form-label">Código del Producto</label>
                    <input type="text" class="form-control" id="code" name="code" required>
                </div>
                <div class="mb-3" require >
                    <label for="price" class="form-label">Precio</label>
                    <input type="number" class="form-control" id="price" name="price" step="0.01" required>
                </div>
                <div class="mb-3" require>
                    <label for="status" class="form-label">¿Está disponible?</label>
                    <select class="form-select" id="status" name="status" required>
                        <option value="true">Sí</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div class="mb-3" require>
                    <label for="category" class="form-label">Categoría</label>
                    <input type="text" class="form-control" id="category" name="category" required>
                </div>
                <div class="mb-3" require >
                    <label for="thumbnail" class="form-label">URL de la Imagen</label>
                    <input  class="form-control" id="thumbnail" name="thumbnail" >
                </div>
                <button type="button" class="btn btn-primary" onclick="addProduct()">Agregar Producto</button>
            </form>
        </div>
        <!-- Formulario para Eliminar Producto -->
        <div class="col-md-6">
            <h2 class="text-center">Formulario para Eliminar Producto</h2>
            <form action="" method="">
                 <div class="mb-3">
                    <label for="ID del producto" class="form-label">ID del Producto</label>
                    <select type="text" class="form-control" id="product_id" name="product_id" required>
                    </select>
                </div>
                <button type="submit" class="btn btn-danger"  onclick="deleteProduct()" >Eliminar producto</button>
            </form>

        </div>
    </div>
</div>

</main>
  <script src="/socket.io/socket.io.js"></script>

  <script src="/js/realtimeproducts.js"></script>